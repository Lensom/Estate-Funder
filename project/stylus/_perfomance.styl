.map
    height 610px
    margin-top 90px
    &__photos
        display flex
        justify-content space-between
        max-height 354px
        img 
            width 33.33%

.ong
    padding 100px 0 0
    text-align center

.perfomance
    &__subtitle-sm
        margin 0
        color $black
        line-height 26px
        font-size 16px
        font-weight 400

.historical
    background $white
    padding 100px 0 50px
    .perfomance
        &__items 
            justify-content space-around
        &__subtitle
            margin 70px 0 0
            &-sm 
                margin -5px 0 5px
    .chart-1
        margin-top 135px

.vs
    background-color $gray-back
    padding 100px 0
    &__wrapper
        display flex
        justify-content space-between
    &__graph 
        max-width 570px
        margin-top 20px
        &-text 
            margin-top 60px
            p 
                font-weight 500
                font-size 16px
                color $blue-2
                display flex
                align-items center
                margin-bottom 5px
            span 
                display inline-block
                width 15px
                height 15px
                border-radius 50%
                margin-right 20px
    &__text 
        max-width 490px
        padding-left 30px
    .card__subtitle
        margin-bottom 20px
