.breadcrumb
    &__wrapper 
        margin 52px 0 23px
    ul 
        display flex
    li
        font-weight 500
        font-size 14px
        color rgba(107, 124, 149, .55)
        line-height 26px
        position relative
        padding-right 20px
        padding-left 25px
        &:after
            content ''
            position absolute
            top 10px
            left 100%
            background-image url(../img/bread_arrow.png)
            width 6px
            height 9px
        &:last-child
            &:after
                display none
        &:first-child
            padding-left 0
    a   
        font-weight 500
        font-size 14px
        color $blue-2
        line-height 26px
        &:hover
            color $blue

.ist 
    .page__title
        text-align center
    .btn__details
        width 100%
    &__wrapper 
        margin 20px 0 110px
    &__photos
        max-width 560px
    &__photo 
        margin-top 62px
    &__thumb
        margin-top 20px
        .item
            cursor pointer 
            width 80px
            height 80px
            border-radius 10px
            position relative
            &:after 
                content ''
                position absolute
                top 0 
                left 0
                right 0
                bottom 0
                background-color rgba(255, 255, 255, .6)
                z-index 1
            &:hover
                &:after
                    display none 
        .synced
            .item
                &:after
                    display none 
    &__details 
        margin-top -5px
    &__photo 
        .item 
            border-radius 10px
    &__name
        font-weight 500
        font-size 18px
        color $blue-2
        line-height 26px
    &__item 
        display flex
        justify-content space-between
        margin-top 70px
    &__details
        flex-grow 1
        max-width 460px
        margin-left 30px
    &__cards
        display flex
        justify-content space-between
        flex-wrap wrap 
        padding 40px 0 5px
        border-bottom 1px solid #e5e5e5
        margin-bottom 32px
    &__card
        width 50%
        margin-bottom 30px
        position relative
        &:hover 
            .tooltiptext
                visibility visible
                opacity 1
        &:first-child
            &:after
                content '+'
                position absolute
                font-weight 600
                font-size 22px
                color $blue
                line-height 26px
                top 0
                right 18%
        .page__subtitle
            display flex
            align-items center
    &__total
        text-align center
    &__funds
        display flex
        justify-content space-between
    &__info 
        font-weight 400
        font-size 14px
        color $blue-2
        line-height 26px
        span 
            color $gray-4
    &__total 
        .page__subtitle
            margin-top 10px
    &__btn-wrapper
        margin-top 24px

.progress
    &__bar
        border-radius 8px
        position relative
        width 100%
        max-width 460px
        border 1px solid #e5e5e5 
        height 10px
        margin 35px 0 18px
    &__fill
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        background $blue
        border-radius 8px

.tooltiptext
    visibility hidden
    width 140px
    background-color #555
    color #fff 
    text-align center
    padding 5px
    border-radius 6px
    position absolute
    z-index 1
    bottom 125%
    left 50%
    margin-left -70px
    opacity 0
    transition opacity .3s
    &:after
        content ''
        position absolute
        width 10px
        height 10px
        transform translateX(-50%) rotate(45deg)
        left 50%
        bottom -5px
        border 5px solid #555 
    &-trigger 
        font-size 14px
        width 16px
        height 16px
        border 1px solid #000 
        border-radius 50%
        text-align center
        display flex
        align-items center 
        justify-content center
        margin-left 5px
        cursor pointer
        position relative

.insum
    padding 105px 0 0
    text-align center
    &__wrapper
        margin-top 70px
    &__items 
        display flex
        justify-content space-between
        flex-wrap wrap 
        margin-top 55px
    &__item 
        width 48%
        display flex
        justify-content space-between
        min-height 98px
        margin-bottom 20px
        &:nth-child(2n)
            margin-left 40px
    &__inner
        display flex
        justify-content space-between 
        width 100%
        padding 0 20px
    &__side
        font-weight 500
        font-size 22px
        color $blue-2
        line-height 26px
        &-left  
            text-align left
            background-color #e6f1ff
            display flex
            align-items center 
            border-radius 10px 0 0 10px
            width 53%
            padding 15px 15px 15px 40px
        &-right 
            display flex
            align-items center 
            border-radius 0 10px 10px 0
            width 47%
            padding 15px
            justify-content center
            background-color $gray-back
    &__text 
        .page__text.page__text-sm
            margin-bottom 0
    &__market
        margin 60px 0 10px
    &__analitic
        display flex
        text-align left
        padding 45px 0
    &__desc
        max-width 560px
        margin-right 40px
    &__import 
        padding 20px 0
        .import__items
            margin-top 27px
    .page__text
        margin-bottom 15px
    &__table 
        box-shadow 0 30px 60px rgba(21, 28, 39, 0.1)
        margin 60px 0
        th 
            background-color $white
        td,th
            &:first-child
                padding-left 60px
            &:last-child
                padding-right 60px
        .total
            td 
                color $blue-2
                font-weight 700
                padding-top 50px
                padding-bottom 50px
                &:after
                    display none
        td 
            font-weight 500
            font-size 22px
            color $blue-2
            line-height 26px
            background-color $white
            &:first-child
                padding-left 86px
                &:after 
                    position absolute
                    content ''
                    background-color #a2abb7
                    width 15px
                    height 15px
                    border-radius 50%
                    left 60px
                    top 50%
                    transform translateY(-50%)
        tr
            &:nth-child(2n)
                td
                    &:first-child
                        &:after
                            background-color $blue


.updates
    position relative
    padding 10px 0 100px
    .card__title
        text-align center
    &__line
        position absolute
        border-radius 8px
        background-color $gray-back
        width 10px
        height 100%
        left 50%
        margin-left -5px
    &__items 
        display flex
        justify-content space-between
        margin 55px 0
    &__left,
    &__right
        width 50%
    &__info
        &-block 
            box-shadow 0 10px 30px rgba(14, 26, 41, 0.1)
            background-color $white
            max-width 430px
            padding 12px 20px
            position relative
            border-radius 10px
            margin-top 100px
            p 
                font-weight 700
                font-size 14px
                color $blue-2
                line-height 26px
            &:after
                content ''
                position absolute
                width 20px
                height 20px
                top 50%
                transform translateY(-50%) rotate(45deg)
                background-color $white
                border-radius 4px
        &-image 
            display flex
            justify-content space-between
            margin-bottom 10px
    &__pos
        font-weight 500
        font-size 22px
        color $blue
        line-height 26px
        margin-top 40px
        &:last-child
            margin-top 220px
    &__left 
        display flex
        flex-direction column 
        align-items flex-end 
        .updates__info-block
            margin-right 40px
            &:after
                right -10px
        .updates__pos 
            margin-right 65px
        .upp
            right -50px
    &__right
        display flex
        flex-direction column 
        align-items flex-start
        .updates__info-block
            margin-left 40px
            &:after
                left -10px
        .updates__pos
            margin-left 65px
        .upp
            left -50px

.upp
    position absolute
    top 0
    width 20px
    height 20px
    border-radius 50%
    top 50%
    box-shadow 0 5px 15px rgba(115, 151, 237, 0.45)
    margin-top -10px
    &:after
        position absolute
        content ''
        width 10px
        height 10px
        background $blue
        top 50%
        left 50%
        margin -5px 0 0 -5px
        border-radius 50%

.potential 
    background-color $gray-back
    padding 100px 0
    &__wrapper
        display flex
        justify-content space-between
    .page__title
        text-align center


.calculate
  text-align left
  padding 10px 0 20px
  display flex
  justify-content space-between
  max-width 460px
  width 100%
  flex-direction column 
  margin-right 30px
  &-text 
    color #fff 
    font-weight 700
    font-size 45px
    margin 0
  &-input
    background transparent
    border none 
    font-weight 700
    font-size 45px
    outline none
    width 100%
    border-radius 4px
    background-color $white
    text-align center
    font-family $default-font
    font-weight 500
    font-size 20px
    line-height 20px
    padding 13px 15px
      

 .noUi-horizontal .noUi-handle
   width 30px
   height 30px
   top -9px
     
.noUi-handle
    background #0085FF
    box-shadow 0 11px 19px 0 rgba(12,71,124,0.48)
    border-radius 50%
    border none
    outline none
    cursor pointer
    &:before 
        width 10px
        height 10px
        border-radius 50%
        top 50%
        left 50%
        transform translate(-50%, -50%)
    &:after
        display none
    
 .noUi
    
   &-target
     background #A1AFC3
     border none
     box-shadow none
     outline none
   &-connects
     border-radius 10px
   &-connect
     background-color $blue
   &-horizontal
       height 10px
       background $white 
    &-tooltip
        font-weight 600
        font-size 18px
        color $blue-2
        line-height 26px
        text-align center
        background: #FFFFFF;
        padding 14px 21px
        border none 
        border-radius 10px
        text-transform uppercase
        box-shadow 0 10px 30px rgba(14, 26, 41, 0.1)
        &:after
          position: absolute;
          content: '';
          width: 10px;
          height: 10px;
          left: 50%;
          transform: translateX(-50%) rotate(45deg);
          bottom: -5px;
          background: white;

.calc
    &-slider
        width 100%
        margin-top 33px
    &-chart 
        max-width 560px
        margin-top 20px
    &__value 
        font-weight 600
        font-size 14px
        color $blue-2
        line-height 26px
        &-wrapper 
            display flex
            justify-content space-between
            margin 16px 0 2px
    &__return
        font-weight 400
        font-size 16px
        color $black
        line-height 26px
        border-top 1px solid #e5e5e5
        margin-top 37px
        padding-top 30px
        text-align center
        &-text 
            font-weight 600
            font-size 22px
            color $blue-2
            line-height 26px
            padding-top 12px
    &__button
        &-wrapper 
            margin-top 34px
            .btn__details
                width 100%
                text-align center

#potential__chart
    background $white