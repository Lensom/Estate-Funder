

.wrapper 
    width 100%
    max-width 1200px
    padding 0 20px
    margin 0 auto 
    position relative

a
    text-decoration none
    transition all .3s ease

.main
    &__title
        font-weight 400
        font-size 50px
        color $blue-2
        line-height 60px
        margin-bottom 20px
    &__subtitle
        font-weight 500
        font-size 24px
        color $blue-2
        line-height 40px

.page
    &__title
        font-weight 400
        font-size 40px
        color $blue-2
        line-height 50px
        margin-bottom 40px
    &__text
        font-weight 400
        font-size 20px
        color $black
        line-height 35px
        &-sm 
            font-size 16px
            line-height 26px
    &__list 
        li 
            padding-left 30px
            position relative
            &:before
                content ''
                background-image url(../img/point.svg)
                position absolute
                left 0
                // top 50%
                // margin-top -12px
                width 24px
                height 24px

.card
    &__bold
        font-weight 600
        font-size 18px
        color $blue-2
        line-height 26px
    &__title 
        font-weight 500
        font-size 30px
        color $blue-2
        a 
            color $blue-2 
            &:hover
                color $blue
    &__subtitle 
        font-weight 400
        font-size 20px
        color $black
        line-height 35px
    &__text
        font-weight 400
        font-size 16px
        color $black
        line-height 26px
        &-sm 
            font-size 12px
            font-weight 500
        a
            color $blue
            font-weight 600
            &:hover
                color $blue-2
    &__button
        text-align center
        margin 30px 0
    &__link
        color $blue
        font-size 20px
        font-weight 400
        line-height 35px
        &:hover
            color $blue-2
    &__types
        display flex
        justify-content space-between
        margin-top 50px
        margin-bottom 58px
        &-1 
            flex-wrap wrap
            justify-content center
            margin 20px 0 32px
            .card__type
                width 50%
                margin-bottom 20px
    &__type
        width 33.3%
.dashbord
    &__title
        font-weight 400
        font-size 16px
        color $black
        line-height 26px
    &__text 
        font-weight 500
        font-size 22px
        color $blue-2
        line-height 26px




.btn
    display inline-block
    &__activity
        font-weight 700
        font-size 14px
        color $white
        line-height 20px
        text-transform uppercase
        background $blue
        border-radius 4px
    &__details
        background $blue
        font-weight 600
        font-size 20px
        color $white
        line-height 20px
        border-radius 4px
        padding 13px 40px
        &:hover
            background $blue-2
    &__invest
        font-weight 600
        font-size 14px
        color $gray-4
        line-height 20px
        background $gray-2
        border-radius 4px
        text-transform uppercase
        padding 15px 32px
        &:hover 
            background $gray-4
            color $gray-2
        p
    &__started
        display inline-block
        font-weight 500
        font-size 14px
        color $white
        line-height 20px
        text-transform uppercase
        border-radius 4px
        background $blue
        padding 15px 32px
        transition background .3s ease 
        &:hover 
            background $blue-2
    &__ops
        font-weight 700
        font-size 20px
        color $white
        line-height 20px
        text-transform uppercase
        background $green
        border-radius 4px
    &__login
        font-weight 500
        font-size 14px
        color $gray-4
        line-height 20px
        text-transform uppercase
        background $gray-2
        border-radius 4px
        padding 15px 32px
        transition background .3s ease
        &:hover 
            background $gray-4
            color $gray-2
    &__view
        color $white
        font-size 14px
        font-weight 700
        line-height 20px
        text-transform uppercase
        border-radius 4px
        background-color $blue
        padding 15px 28px
        &:hover
            background #1a273a
    &__submit
        border-radius 4px
        background-color $white
        font-size 14px
        font-weight 700
        line-height 20px
        text-transform uppercase
        color #000
        border none 
        appearance none
        position relative
        // left -10px
        padding 15px 29px


[class^="icon-"],
[class*=" icon-"]
  font-family 'icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


.icon-btn_start:before
  content "\e900"
  color #fff

.icon-btn_login:before
  content "\e901"
  color #fff

.owl
    &-dots
        display none
    &-nav
        position absolute
        left 50%
        transform translateX(-50%)
        margin 30px 0
        button
            position relative
            margin 0 10px
    &-prev,
    &-next
        outline none
        span 
            font-size 0
    &-prev
        span:after
            position absolute
            content ''
            top 0
            left 0
            background-image url(../img/arrow.svg)
            width 7px
            height 9.5px
            transform rotate(180deg) scale(2)
            top -1px
    &-next
        span:after
            position absolute
            content ''
            top 0
            left 0
            background-image url(../img/arrow.svg)
            width 7px
            height 10px
            transform scale(2)

.plane
    position absolute
    width 73%
    right -120px
    bottom 35px


.center 
    text-align center

.white 
    color $white

.p-blue
    background $blue
.p-blue-2
    background  #50a4f4
.p-blue-3
    background #5cb7fd
.p-blue-4
    border 1px solid #5cb7fd
    background transparent
.point.p-avg
    background #d5dce6
    height 100%
    width 1px

.form
    &__input
        border-radius 4px
        border 1px solid #dbe1e6
        appearance none
        color $black
        font-size 16px
        font-weight 400
        line-height 26px
        outline none
        width 100%
        padding 9px 18px 13px
        margin-top 25px
        font-family $default-font
        font-weight 500
        &::placeholder
            color rgba(107, 124, 149, .5)
        &:focus
            border 1px solid $black
    &__submit
        color $white
        font-size 20px
        font-weight 600
        line-height 20px
        text-transform uppercase
        border-radius 4px
        background-color $blue
        border none
        width 100%
        padding 27px
        transition all .3s ease
        cursor pointer
        &:hover
            background $blue-2

    &__wrapper
        margin-bottom 40px
    &__wrapper.df
        display flex
        align-items flex-end 
        justify-content space-between
        label
            width 100%
            text-align left
            max-width 360px
            &:first-child
                margin-right 5px
            &:last-child
                margin-left 5px

.return
    color $blue-2
    font-size 22px
    font-weight 600
    line-height 26px
    margin-bottom -10px

.class
    width 50px
    height 50px
    background-color #4c84ff
    color $white
    font-size 30px
    display flex
    align-items center 
    justify-content center
    border-radius 50%
    margin 0 auto
