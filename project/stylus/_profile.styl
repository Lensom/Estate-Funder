.extra
  min-height 340px
  background-size cover
  background-position center center
  text-align center
  padding 90px 0 30px

.profile
  padding 100px 0 105px
  &__wrapper
    max-width 760px
    margin 0 auto
    text-align center
  &__links
    display flex
    justify-content center
    margin -10px 0 55px
    &-link
      color $gray-4
      font-size 20px
      font-weight 600
      line-height 20px
      background-color $gray-back
      max-width 280px
      width 100%
      display inline-block
      padding 15px
      &:first-child
        border-top-left-radius 4px
        border-bottom-left-radius 4px
      &:last-child
        border-top-right-radius 4px
        border-bottom-right-radius 4px
    &-link.active
      color $white
      background-color $blue
  &__name
    color $blue-2
    font-family $default-font
    font-size 30px
    font-weight 500
  &__item
    display none
    p 
      color $black
      font-family $default-font
      font-size 16px
      font-weight 400
      line-height 26px
  &__item.active 
    display block
  .profile__text
    color $blue-2
    font-family $default-font
    font-size 20px
    font-weight 500
    line-height 20px
  &__block
    margin 50px 0 62px
    &-item 
      margin-bottom 20px
    p
      margin-top 10px
  &__extra
    margin-top 60px
    text-align left
  &__button
    margin-top 62px
  .create__list
    margin-top 65px
    text-align center