
.accordion
  text-align center
  margin 10px 0
  .card__title 
    margin-top 50px
  &__wrapper 
    margin-top 54px
  &__item
    margin-bottom 20px
    border-radius 10px
    text-align left
  &__answer
    display none
    font-family $default-font
    font-weight 400
    font-size 20px
    color $black
    line-height 35px
    padding 0px 60px 50px
  &__question
    font-family $default-font
    font-size 22px
    font-weight 500
    line-height 26px
    color $blue-2
    background $gray-back
    padding 55px 85px 55px 60px
    border-radius 10px
    position relative
    &:after
      content ''
      position absolute
      top 50%
      margin-top -7px
      right 60px
      background-image url(../img/arrow_b.png)
      width 23px 
      height 14px
  &__item.show 
    box-shadow 0 30px 60px rgba(21, 28, 39, 0.1)
    .accordion
      &__question
        background $white
        padding 55px 60px 45px
        &:after
          transform rotate(-180deg)

.date 
  font-weight 400
  font-size 14px
  color $black
  line-height 35px
  margin-bottom 8px

.news
  text-align center
  padding 100px 0 50px
  &__top
    display flex
    justify-content space-between
    margin-top 60px
  &__item 
    text-align left
    h2 
      line-height 34px
    a
      font-family $default-font
      font-weight 500
      font-size 30px
      color $blue-2
    h3 
      font-weight 400
      font-size 20px
      color $black
      line-height 35px
  &__bottom
    display flex
    flex-wrap wrap 
    justify-content space-between
    margin-top 42px
    .news__item
      width 25%
      padding-right 15px
      max-width 275px
      margin-bottom 30px
      h2 
        margin 24px 0 0
        line-height 28px
      a
        font-weight 500
        font-size 20px
        color $blue-2
        line-height 28px
      &:last-child
        margin-right 0
  &__right
    margin-left 40px
    max-width 400px
    margin-top -5px
    h2 
      margin-bottom 5px
    .news__item
      margin-bottom 45px
  &__main
    max-width 660px
    h2 
      margin 34px 0 4px
  &__btn
    margin-top 40px

.import
  text-align center
  padding 55px 0 72px
  &__items
    text-align left
    margin-top 50px
    display flex
    justify-content space-between
    flex-wrap wrap 
  &__item
    padding-right 15px
    width 33.3%
    margin-bottom 36px
    a
      display flex
      font-weight 500
      font-size 22px
      color $blue
      line-height 26px
      align-items flex-end
      margin-top 16px
      &:hover
        color $blue-2
    img 
      margin-right 22px