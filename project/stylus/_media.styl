@import "_vars.styl"

/*==========  Desktop First  ==========*/

@media (max-width: 1400px)
	.btn 
		&__started,
		&__login
			padding 15px 25px

	.header
		&__menu
			&-item 
				padding 0 12px

	.platform
		&__image
			max-width 600px
			right 0
			margin-top 80px

/* Large Devices, Wide Screens */
@media (max-width : 1200px)
	.btn
		&__started,
		&__login
			padding 15px 14px
	.header
		&__logotype
			max-width 230px
		&__buttons
			right 25px
			a 
				margin-left 10px
		&__menu
			&-item 
				padding 0 7px
	.page
		&__title
			font-size 32px
			line-height 42px
		&__text
			font-size 18px
			line-height 32px
	
	.platform
		&__image
			max-width 500px
		.page
			&__list
				li 
					margin-bottom 15px
	
	.card
		&__bold
			font-size 16px
			line-height 22px
		&__title
			font-size 24px
		&__body
			padding 28px 20px
		&__class
			left 20px
			width 40px
			height 40px
			font-size 24px
			top -20px
		&__structure
			padding-left 20px

				

/* Medium Devices, Desktops */
@media (max-width : 998px)

	.btn
		&__details
			font-size 18px
			padding 10px 30px

	.main
		&__title
			font-size 42px
			line-height 52px
		&__subtitle
			font-size 20px
			line-height 36px

	.header
		background $blue
		justify-content space-between
		.icon
			display inline-block
			font-size 26px
		&__buttons 
			right 0
			display flex
			position relative
			a 
				font-size 0
				background-color transparent
				padding 0
				margin 0 0 0 30px
				height 26px
				&:hover 
					background transparent 
				&:first-child
					margin-left 0
		&__menu
			&-wrapper 
				position fixed
				top 0
				left 0
				right 0
				bottom 0
				display flex
				align-items center 
				justify-content center 
				background $blue 
				transition all .5s ease 
				transform translateY(100%)
			&-wrapper.show 
					transform translateY(0)
			&-item 
				display block
				text-align center
				padding 15px
				a 
					color $white 
		&__logotype
			position relative
			margin-left 40px
			max-width 181px
		&__mobile 
			display block
	
	.top
		min-height 550px
		padding 130px 0 30px
	
	.platform
		padding 40px 0
		&__wrapper
			flex-direction column 
		&__image
			position relative
			margin 40px auto 0
		.page
			&__list 
				margin-top 30px
	
	.page
		&__title,
		&__text
			br
				display none
		&__title
			font-size 30px
			line-height 42px
	
	.invest 
		padding 40px 0 50px

	.card
		&__invest
			&:nth-child(2n)
				margin 0 20px
		&__body
			padding 20px 15px
		&__title
			font-size 22px
		&__position
			font-size 14px
			&:before
				top 6px
		&__bottom
			span 
				font-size 16px
		&__text-sm
			font-size 10px
		&__bottom
			padding 20px 0 10px
		&__button
			margin 20px 0
		&__text
			font-size 14px
			line-height 22px

	.projects
		padding 40px 0 50px

	.perfomance
		padding 40px 0 50px
		&__subtitle
			font-size 18px
			margin-top 40px
		&__text
			br 
				display none
	
	.choose
		padding 40px 0 50px
		&__body
			padding 25px 15px 20px
	
	.sign
		&__wrapper
			padding 95px 0 60px
		&__input
			width 250px
	
	.btn
		&__submit
			padding 15px 15px
	
	.footer
		padding 50px 0
		&__side
			max-width 340px
		&__right
			max-width none
			padding-left 15px
		&__menu-item
			padding-right 15px
			a 
				font-size 16px
		&__copy
			margin-top 30px
		&__text
			margin-top 35px
	
	.signin
		padding 50px 0
		&__form
			margin-top 40px
		&__text
			margin-top 50px

/* Small Devices, Tablets */
@media (max-width : 768px)
	.main
		&__title
			font-size 38px
			line-height 44px
			margin-bottom 28px
		&__subtitle
			font-size 18px
			line-height 30px
	
	.top
		min-height 640px
		padding 150px 0 30px
	
	.invest
		&__wrapper
			padding 0
	.perfomance
		&__text
			font-size 14px
			margin-bottom 20px
	
	.choose
		&__items
			flex-direction: column
		&__item 
			margin 10px auto 20px
			&:first-child
				margin 10px auto 50px

	.sign
		&__wrapper
			flex-direction column 
			padding 95px 0 50px
		&__form
			flex-direction column
			max-width 335px
			margin 0 auto
			width 100%
		&__input
			width auto
			left 0
			text-align center
			margin-bottom 10px
	
	.plane
		left 30%
		right auto
		width 100%
		top 35px
		bottom auto
	
	.footer
		&__sides
			flex-direction column 
		&__side
			max-width none
		&__contacts
			margin-top 25px
			p
				img 
					padding-right 10px
		&__copy
			margin 10px 0 20px
		&__right
			padding-left 0
		&__menu
			&-item
				a
					font-size 18px
		&__social
			margin-top 22px
		&__text
			margin-top 53px
			p
				margin-bottom 30px
				&:last-child
					margin-bottom 0
/* Extra Small Devices, Phones */
@media (max-width : 568px)
	.main
		&__subtitle
			br 
				display none
	.page
		&__title
			font-size 28px
			line-height 40px
			text-align center
			margin-bottom 20px
			br 
				display none
		&__text
			text-align center
	
	.card
		&__bold
			font-size 14px
	
	.platform
		&__image
			margin 30px auto 0
	
	.owl-item
		width 268px !important
	
	.perfomance
		&__items
			flex-wrap wrap 
			margin-bottom 25px
		&__item
			width 50%
			justify-content flex-start
	.p-avg
		margin-right 15px
	
	.choose
		&__item
			.page__list li
				margin-bottom 15px
	
	.footer
		&__menu
			&-item
				width 50%
		

/* Extra Small Devices, Phones */
@media (max-width : 480px)
	.page
		&__text
			font-size 16px
			line-height 28px
	
	.btn
		&__invest
			width 100%
	
	.signin
		&__form
			p 
				font-size 18px
		&__text
			margin-top 30px
	.form
		&__input
			margin-top 15px
		&__wrapper
			margin-bottom 25px
		&__submit
			padding 15px 
			font-size 18px

/* Custom, iPhone Retina */
@media (max-width : 380px)
	.main
		&__title
			font-size 28px
			line-height 38px
		&__subtitle
			font-size 16px
			line-height 32px

	.top 
		min-height 500px

	.header
		.icon 
			font-size 20px
		&__buttons
			a 
				height 20px
				margin 0 0 0 15px
		&__logotype 
			max-width 165px
	
	.footer
		&__contacts
			p,
			a
				font-size 14px

	.btn
		&__view
			font-size 12px
			padding 10px 28px