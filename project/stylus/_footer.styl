.footer
  background-color $blue-2
  padding 103px 0 80px
  &__sides
    display flex
    justify-content space-between
  &__side
    max-width 478px
    width 100%
  &__menu
    display flex
    justify-content flex-start
    flex-wrap wrap
    &-item 
      width 33.3%
      margin-bottom 14px
      a
        color $white
        font-size 20px
        font-weight 700
        &:hover
          color $blue
  &__copy
    margin-top 58px
    a 
      opacity 0.5
      color $gray
      font-size 14px
      font-weight 400
      line-height 24px
      &:hover
        opacity 1
  &__text
    margin-top 65px
    p 
      color $gray
      font-size 14px
      font-weight 400
      line-height 24px
      margin-bottom 25px
  &__social
    margin-top 55px
    cursor default
    &-item
      display inline-block
      margin-right 18px
      img 
        transition all .3s ease
      a
        &:hover
          img
            filter opacity(0.5)
  &__right
    flex-grow 1
    max-width none
    padding-left 25px
  &__contacts
    margin-top 67px
    p
      color $white
      font-size 16px
      font-weight 500
      line-height 40px
      display flex
      img 
        padding-right 35px
    a
      color $white
      font-size 16px
      font-weight 500
      line-height 40px
      text-decoration none
      &:hover
        color $blue
  &__logo
    margin-top 3px


