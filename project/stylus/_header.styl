.header
    height 80px
    display flex
    align-items center 
    justify-content center 
    background $white
    padding 15px 20px
    position relative
    &__menu
        &-item 
            display inline-block
            padding 0 21px
            a
                font-weight 600
                font-size 14px
                color $blue-2
                line-height 20px
                text-transform uppercase
                &:hover 
                    color $blue
    &__logotype 
        position relative
        width 100%
        max-width 278px
        height 100%
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        cursor pointer
        z-index 1
        a 
            display flex
            align-items center 
            justify-content center 
            background-color $blue
            width 100%
            height 100%
    &__buttons 
        position absolute
        right 50px
        a 
            margin-left 16px
    &__mobile 
        display none
        position absolute
        left 20px
        width 20px
        height 10px
        &-line 
            width 100%
            height 2px
            position absolute
            background $white
            z-index 1
            transition all .3s ease 
            &-2 
                width 70%
                bottom 0
    &__info
        display flex
        position absolute
        right 50px
        margin-right 10px
        align-items center
    &__notification
        span
            position absolute
            color $white
            font-size 9px
            font-weight 600
            display flex
            align-items center 
            justify-content center
            width 12px
            height 12px
            background-color #ff4e4e
            border-radius 50%
            top 3px
            right -8px
        &-link
            margin 0 30px 
            position relative
            display flex
    &__profile
            max-width 40px
            max-height 40px
            img 
                max-width 40px
                max-height 40px
            a 
                display block
            
.header.account
    border-bottom 1px solid rgba(0, 0, 0, 0.1)


    .icon
        display none

.show
    .header
        &__mobile 
            height auto 
            &-line
                &-1
                    bottom 0 
                    transform rotate(45deg)
                &-2 
                    bottom 0
                    width 100%
                    transform rotate(-45deg)
        &__menu-wrapper
            transform translateY(0)