.header
    height 80px
    display flex
    align-items center 
    justify-content center 
    background $white
    padding 15px 20px
    position relative
    &__menu
        &-item 
            display inline-block
            padding 0 21px
            position relative
            a
                font-weight 600
                font-size 14px
                color $blue-2
                line-height 20px
                text-transform uppercase
                &:hover 
                    color $blue
            &:hover
                .sub-menu
                    opacity 1
                    visibility visible
    &__logotype 
        position relative
        width 100%
        max-width 278px
        height 100%
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        cursor pointer
        z-index 2
        a 
            display flex
            align-items center 
            justify-content center 
            background-color $blue
            width 100%
            height 100%
    &__buttons 
        position absolute
        right 50px
        z-index 2
        a 
            margin-left 16px
    &__mobile 
        display none
        position absolute
        left 20px
        width 20px
        height 10px
        z-index 2
        &-line 
            width 100%
            height 2px
            position absolute
            background $white
            z-index 1
            transition all .3s ease 
            &-2 
                width 70%
                bottom 0
    &__info
        display flex
        position absolute
        right 50px
        margin-right 10px
        align-items center
    &__notification
        span
            position absolute
            color $white
            font-size 9px
            font-weight 600
            display flex
            align-items center 
            justify-content center
            width 12px
            height 12px
            background-color #ff4e4e
            border-radius 50%
            top 3px
            right -8px
        &-link
            margin 0 30px 
            position relative
            display flex
    &__profile
            max-width 40px
            max-height 40px
            img 
                max-width 40px
                max-height 40px
            a 
                display block
    .icon
        display none
.header.account
    border-bottom 1px solid rgba(0, 0, 0, 0.1)

.current_page_item
    a 
        color $blue 
    

.show
    .header
        &__mobile 
            height auto 
            &-line
                &-1
                    bottom 0 
                    transform rotate(45deg)
                &-2 
                    bottom 0
                    width 100%
                    transform rotate(-45deg)
        &__menu-wrapper
            transform translateY(0)
            z-index 1
body.show 
    width 100%
    position fixed


.sub-menu
    position absolute
    width 100%
    text-align center 
    box-shadow 0 15px 70px rgba(14, 26, 41, 0.21)
    background-color $white
    border-radius 10px
    top 40px
    padding 10px 0
    opacity 0
    visibility hidden
    transition all .3s ease 
    &:after 
        content ''
        position absolute
        width 10px
        height 10px
        background $white 
        top -5px
        transform translateX(-50%) rotate(45deg)
    a
        font-family $default-font
        font-weight 500
        font-size 14px
        color $black
        line-height 34px
        text-transform inherit
        display block
        &:hover
            color $blue 
    .menu-item
        padding 5px 0