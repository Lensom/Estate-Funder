.settings
  padding 100px 0 105px
  &__wrapper
    text-align center
    max-width 760px
    margin 0 auto 
  &__sides
    display flex
    justify-content space-between
    margin 50px 0
  .contact__form
    margin 0
  &__image
    width 160px
    height 160px
    position relative
    margin-bottom 65px
  &__title
    color $blue-2
    font-size 20px
    font-weight 600
    line-height 20px
    text-align left
    margin 8px 0 30px
  &__remove
    position absolute
    top 39%
    right -15px
    display flex
    width 34px
    height 34px
    background-color #ff4e4e
    align-items center 
    justify-content center
    color $white
    font-size 20px
    border-radius 50%
  &__side
    &:last-child
      width 100%
      max-width 360px
  .btn
    margin-top 10px
  form
    .btn
      margin-top 21px
      max-width 228px
      font-size 20px
      width 100%
      padding 15px 20px
      cursor pointer
  &__text
    margin-top 100px
  .create__list
    margin-top 65px